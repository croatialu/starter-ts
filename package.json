{
  "name": "starter-ts",
  "version": "1.0.0",
  "packageManager": "pnpm@7.10.0",
  "description": "",
  "author": "",
  "license": "MIT",
  "homepage": "https://github.com/<github name>/<repo name>#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/<github name>/<repo name>.git"
  },
  "bugs": {
    "url": "https://github.com/<github name>/<repo name>/issues"
  },
  "keywords": [],
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "require": "./dist/index.cjs.js",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.mjs",
  "browser": "./dist/index.umd.js",
  "types": "./types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "tsx watch ./src/index.ts",
    "dev": "concurrently \"pnpm run dev:types\" \"pnpm run dev:source\"",
    "build": "pnpm run build:types && pnpm run build:source",
    "lint": "concurrently \"pnpm run lint:source\" \"pnpm run lint:spec\"",
    "format": "eslint . --fix && git status",
    "test": "pnpm run test:unit && pnpm run test:coverage",
    "test:unit": "vitest",
    "test:coverage": "vitest run --coverage",
    "dev:types": "tsc --watch",
    "dev:source": "rollup -cw",
    "build:types": "tsc",
    "build:source": "rollup -c",
    "lint:source": "eslint . --ignore-pattern '**/*.spec.ts'",
    "lint:spec": "eslint '**/**.spec.ts'",
    "clean": "rimraf dist types",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.26.3",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-angular": "^17.1.0",
    "@release-it/conventional-changelog": "^5.1.1",
    "@rollup/plugin-typescript": "^8.5.0",
    "@vitest/coverage-c8": "^0.22.1",
    "concurrently": "^7.3.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "pnpm": "^7.10.0",
    "prettier": "^2.7.1",
    "release-it": "^15.5.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.0",
    "tslib": "^2.4.0",
    "tsx": "^3.9.0",
    "typescript": "^4.8.2",
    "vitest": "^0.22.1"
  },
  "lint-staged": {
    "**/*.ts": [
      "pnpm run format"
    ]
  }
}
